<%= csrf_meta_tag %>

<div class="row">
	<div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
		<h1 class="page-title txt-color-blueDark">
			<i class="fa-fw fa fa-pencil-square-o"></i> Usuarios
		</h1>
	</div>
	
	<div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
	<a  href="<%=new_admin_user_path%>" class="btn btn-success btn-lg pull-right header-btn ">
		<i class="fa fa-file-text fa-lg"></i> Registrar nuevo
	</a>

	</div>
</div>
<div class="row">
	<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
			
			<header>
				<span class="widget-icon"> <i class="fa fa-table"></i> </span>
				<h2>Listado de Usuarios</h2>

			</header>
			<div>
				<div class="jarviswidget-editbox">
				</div>
				<div class="widget-body no-padding">
					<div class="widget-body-toolbar">

					</div>
					
					<table id="grilla_basica" class="table table-striped table-bordered table-hover">
						<thead>
							<tr>
								<th>Codigo rs</th>
								<th>Nombre</th>
								<th>Apellido</th>
								<th>Email</th>
								<th>Telefono</th>
								<th>Descripcion</th>
								<th width="100"></th>
							</tr>
						</thead>

					
						<tbody>
							<% @users.each do |user| %>
								<tr data-mid="<%= user.id %>">
									<td><%= user.sncode %></td>
                  <td><%= user.name %></td>
                  <td><%= user.lname %></td>
                  <td><%= user.email %></td>
                  <td><%= user.phone %></td>
                  <td><%= user.usertype.description %></td>
									<td>
										<a href="<%=edit_admin_user_path(user)%>" class="btn btn-warning btn-xs"><i class="glyphicon glyphicon-pencil"></i></a>

										<a href="<%=admin_user_path(user)%>" data-eliminar="true" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
									</td>
								</tr>
							<% end %>
						</tbody>
					
					</table>
				</div>
			</div>
		</div>
	</article>
</div>
				
					
	
				